<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="Enter number"
        android:inputType="number"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSetBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Set"
        app:layout_constraintTop_toBottomOf="@+id/numInput"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btnSetBadgeByNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="By Notification"
        app:layout_constraintTop_toBottomOf="@+id/btnSetBadge"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btnRemoveBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Remove"
        app:layout_constraintTop_toBottomOf="@+id/btnSetBadgeByNotification"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textViewHomePackage"
        android:layout_width="373dp"
        android:layout_height="220dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnRemoveBadge"
        tools:layout_editor_absoluteX="6dp" />

</android.support.constraint.ConstraintLayout>